<div class="row" id="header">
	<div class="col-md-3" id="logo">
		<%= image_tag("logo.png", class: "img-responsive top-logo", width: '100', height: '100') %>
		<h1 id="name">DEVURAUXE</h1>
	</div>
	<div class="col-sm-6 " id="navigation">
		<nav class="navbar">
			<ul class="nav navbar-nav">
				<li><%= link_to "Home", "/" %></li>
				<li><%= link_to "Admin", "/admin/index" %></li>
				<li><%= link_to "Products", "/products/index" %></li>
			</ul>
		</nav>
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>">
				<%= value %>
			</div>
       <% end %>
	</div>
	<div class="col-sm-3" id="sign">
		<ul class="nav navbar-nav">
			<li><%= link_to 'Log Out', destroy_user_session_path, :method => "delete" %></li>
		</ul>
	</div>
</div>